@using NotesApp.Models
@model LoginDTO

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <form method="post" asp-action="Login">
        <div class="border p-3 mt-4">
            @if(TempData["login_error"]!=null) {
                <span class="text-danger">@TempData["login_error"]</span>
            }
            <div class="mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Login</button>
            <a asp-controller="Home" asp-action="Register" class="btn btn-secondary" style="width:150px">
                Register
            </a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
