@using NotesApp.Models.ViewModels
@model IEnumerable<NotesIndexVM>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Public Notes List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Notes" asp-action="Index" class="btn btn-secondary">
                Back to List
            </a>
            <a asp-controller="Home" asp-action="Logout" class="btn btn-secondary">
                Logout
            </a>
        </div>
    </div>
    <br />
    @if (TempData["wrong_pass"] != null)
    {
        <span class="text-danger">@TempData["wrong_pass"]</span>
    }
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Note Title
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Title
                    </td>
                    <td width="25%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Notes" asp-action="PasswordPublic" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Show</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>